@model KomPas.Models.Pas
@{
  ViewData["Title"] = "Create";
<style>
  body {
    color: black;
    background-color: burlywood;
    height: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    opacity: 1;
  }
</style>
}

<h1>Dodaj profil</h1>

<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Ime" class="control-label"></label>
        <input asp-for="Ime" class="form-control" />
        <span asp-validation-for="Ime" class="text-danger"></span>
      </div>

      <div class="form-group">
        <label asp-for="Spol" class="control-label"></label>
        <input asp-for="Spol" class="form-control" />
        <span asp-validation-for="Spol" class="text-danger"></span>

      </div>

      <div class="form-group">
        <label asp-for="Rasa" class="control-label"></label>
        <input asp-for="Rasa" class="form-control" />
        <span asp-validation-for="Rasa" class="text-danger"></span>

      </div>
      <div class="form-group">
        <label asp-for="Tezina" class="control-label"></label>
        <input asp-for="Tezina" class="form-control" />
        <span asp-validation-for="Tezina" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="ZdravstveniProblem" class="control-label"></label>
        <input asp-for="ZdravstveniProblem" class="form-control" />
        <span asp-validation-for="ZdravstveniProblem" class="text-danger"></span>
      </div>
      <div class="form-group form-check">
        <label class="control-label" style="margin-right:50px">Kastriran/Sterilisan:</label>
        <input asp-for="KastriranSterilisan" type="radio" value="True" />Yes
        <input asp-for="KastriranSterilisan" type="radio" value="False" />No


      </div>

      <div class="form-group form-check">
        <label class="control-label" style="margin-right:50px">Pas za udomljavanje:</label>
        <input asp-for="DatiNaUdomljavanje" type="radio" value="True" />Yes
        <input asp-for="DatiNaUdomljavanje" type="radio" value="False" />No


      </div>

      <label class="control-label" style="margin-right:50px">Slika:</label>
      <div action="/action_page.php">
        <input asp-for="Slika" type="file">
      </div>



      <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<div>
  
  @Html.ActionLink("Back to list", "Index", "Profil")
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
